<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C Programming"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:id="@+id/courses_CProgramming"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java Programming"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:id="@+id/courses_JavaProgramming"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Python Programming"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:id="@+id/courses_PythonProgramming"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R Programming"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:id="@+id/courses_RProgramming"/>

</LinearLayout>